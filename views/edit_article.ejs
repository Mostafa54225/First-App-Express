<%- include('./layout/header') %> 
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Edit
        </h1>
        <form action="/articles/edit/<%= article._id %> " method="POST">
          <div class="form-group">
            <label for="name">Article title</label>
            <input
              type="title"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter the title of the article"
              value="<%= article.title %>" 
            />
          </div>
          <div class="form-group">
            <label for="body">Write a body</label>
            <input
              type="body"
              id="body"
              name="body"
              class="form-control"
              placeholder="body"
              value="<%=article.body%>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Edit
          </button>
        </form>
      </div>
    </div>
  </div>
<%- include('./layout/footer') %> 